<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button 
            android:textColor="#fff"
            android:id="@+id/bt_unlock"
            android:text="未加锁"
            android:background="@drawable/tab_left_pressed"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        <Button 
            android:textColor="#fff"
            android:text="已加锁"
            android:background="@drawable/tab_right_default"
            android:id="@+id/bt_lock"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/ll_unlock"
	    android:orientation="vertical"
	    android:visibility="visible"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/tv_unlock_des"
	        android:text="未加锁应用总数"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
	    <ListView 
	        android:id="@+id/lv_unlock"
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	    </ListView>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/ll_lock"
	    android:orientation="vertical"
	    android:visibility="gone"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/tv_lock_des"
	        android:layout_width="wrap_content"
	        android:text="已加锁应用总数"
        	android:layout_height="wrap_content"/>
	    <ListView 
	        android:id="@+id/lv_lock"
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	    </ListView>
	</LinearLayout>
</LinearLayout>